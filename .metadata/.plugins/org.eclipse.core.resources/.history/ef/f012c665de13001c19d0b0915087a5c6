import java.util.ArrayList;
import java.util.Iterator;
import java.util.LinkedList;
import java.util.List;
import java.util.ListIterator;

public class ArrayListDemo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub  
		 List<String> Paint = new ArrayList<String>();
		  Paint.add("red");
		  Paint.add("blue");
		  Paint.add("white");
		  Paint.add("orange");
		  Paint.add("red");
		  
		  System.out.println(Paint);
		  
		  Iterator<String> itr = Paint.iterator();
		  while(itr.hasNext())
		  {
		    System.out.println(itr.next());
		    
		  }
		  
		  Paint.add(0, "New colour");
		  System.out.println(Paint);
		  
			 List<String> Animal = new LinkedList<String>();
			 Animal.add("Cat");
			 Animal.add("Dog");
			 Animal.add("Horse");
			 Animal.add("Cow");
		  System.out.println(Animal);
		  
		  int animal_size = Animal.size();
		  System.out.println(animal_size);
		  ListIterator<String> li = Animal.listIterator();
		  
			  
			for(int i =0; i== animal_size; i++)
			{
				
				System.out.println(li.add("BAT"));
				
				
			}
		  
	
	}
	
	

}
